!!!5
%html
  %head
    %meta{ :charset=>'utf-8' }
    %title #{site.title}
    %meta{ :name=>'viewport', :content=>'width=device-width, initial-scale=1.0' }
    :css
      body {
        padding-top: 60px;
      }
    %link{ :rel=>'stylesheet', :type=>'text/css', :href=>"#{site.base_url}/stylesheets/styles.css" }
    /[if lt IE 9]
      %script{ :type=>'text/javascript', :src=>'//html5shim.googlecode.com/svn/trunk/html5.js' }
  -# set a class to body element so we can match active page with CSS hilight!
  %body{ :id=>"#{page.navigation}" }
    %script{ :type=>'text/javascript', :src=>'//cdnjs.cloudflare.com/ajax/libs/jquery/1.9.1/jquery.min.js' }
    %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/bootstrap.js" }
    %script{ :type=>'text/javascript', :src=>"#{site.base_url}/javascripts/bootstrap-collapse.js" }
    %script{:type=>'text/javascript', 
      :src=>"#{site.base_url}/javascripts/jquery.backstretch.min.js"}

    .navbar.navbar-fixed-top.navbar-inverse
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand#homenav{ :href=>"#{site.base_url}/index.html" } Gluster
          .nav-collapse.collapse
            %ul.nav
              %li
                %a#blognav{ :href=>"#{site.base_url}/blog/index.html" } Blog
              %li
                %a#documentationnav{ :href=>"#{site.base_url}/documentation/index.html" } Documentation
              %li
                %a#communitynav{ :href=>"#{site.base_url}/community/index.html" } Community
              %li
                %a#forgenav{ :href=>"http://forge.gluster.org" } Forge

    .container#main
      .row
        .span3
          %h2 Index 
          %ul
            %li This index
            %li Is part of
            %li The template currently
            %li However it should maybe
            %li Be a list of all docs,
            %li populated by some awestruct
            %li code snippet based on the
            %li page category or such...
        .span9#documentationpage
          ~ content
    .antsmarching
      &nbsp;
    %footer
      .container
        .row
          .span12.pagination-centered
            %p <small> &copy; #{Date.today.year} Red Hat, Inc. All Rights Reserved | <a href="#{site.base_url}/legal/">Legal & Privacy</a> </small>

:javascript
  $("body").backstretch("#{site.base_url}/images/cloud_bg.jpeg");

