- wrap_layout :layout do
  .row
    .col-md-8
      %h1
        = current_article.title
      = yield
    .col-md-4
      .panel.pull-right.panel-primary
        .panel-heading
          %h3.panel-title Recent Articles
        .panel-body
          %ol
            - blog.articles[0...10].each do |article|
              %li
                = link_to article.title, article
                %small= article.date.strftime('%b %e')

